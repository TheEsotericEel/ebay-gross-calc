{
  "manifest_version": 3,
  "name": "eBay Gross Calculator",
  "version": "0.1.0",
  "permissions": ["storage","alarms"],
  "host_permissions": [
    "https://*.ebay.com/*",
    "https://*.ebay.co.uk/*",
    "https://*.ebay.ca/*",
    "https://*.ebay.com.au/*",
    "https://api.ebay.com/*",
    "https://api.sandbox.ebay.com/*",
    "https://ebay-gross-calc.onrender.com/*"
  ],
  "background": { "service_worker": "sw.js", "type": "module" },
  "content_scripts": [
    {
      "matches": [
        "https://*.ebay.com/*",
        "https://*.ebay.co.uk/*",
        "https://*.ebay.ca/*",
        "https://*.ebay.com.au/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": { "default_title": "eBay Gross Calc", "default_popup": "popup.html" },
  "options_page": "options.html"
}
