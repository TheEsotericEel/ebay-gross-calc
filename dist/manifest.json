{
  "manifest_version": 3,
  "name": "eBay Gross Calculator",
  "version": "0.1.0",
  "description": "Overlay KPIs and goals for eBay sellers. Live + whatâ€‘if.",
  "action": { "default_popup": "popup/index.html" },
  "options_page": "options/index.html",
  "background": { "service_worker": "workers/background.js", "type": "module" },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
  "*://*.ebay.com/*",
  "*://*.ebay.co.uk/*",
  "*://*.ebay.ca/*",
  "*://*.ebay.com.au/*"
],
"content_scripts": [
  {
    "matches": [
      "*://*.ebay.com/*",
      "*://*.ebay.co.uk/*",
      "*://*.ebay.ca/*",
      "*://*.ebay.com.au/*"
    ],
    "js": ["content/content.js"],
    "run_at": "document_idle"
  }
],
  "web_accessible_resources": [
    {
      "resources": ["icon16.png", "icon48.png", "icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}