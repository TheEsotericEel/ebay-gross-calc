{
    "manifest_version":  3,
    "name":  "eBay Gross Calculator",
    "version":  "0.1.25236.2022",
    "permissions":  [
                        "storage",
                        "alarms"
                    ],
    "host_permissions":  [
                             "https://*.ebay.com/*",
                             "https://*.ebay.co.uk/*",
                             "https://*.ebay.ca/*",
                             "https://*.ebay.com.au/*",
                             "https://api.ebay.com/*",
                             "https://api.sandbox.ebay.com/*",
                             "https://ebay-gross-calc.onrender.com/*"
                         ],
    "action":  {
                   "default_title":  "eBay Gross Calc",
                   "default_popup":  "popup.html"
               },
    "options_ui":  {
                       "page":  "options.html",
                       "open_in_tab":  true
                   }
}
